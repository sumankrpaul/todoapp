{
  "name": "todo_backend",
  "version": "1.0.0",
  "description": "Todo Application using PG SQL and Typescript",
  "main": "app.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma:merge": "prisma-merge -b prisma/schema.base.prisma -s prisma/models/*.prisma -o prisma/schema.prisma",
    "prisma:generate": "npm run prisma:merge && npx prisma generate",
    "prisma:migrate": "npm run prisma:merge && npx prisma db push",
    "development": "npm run prisma:migrate && ts-node src/app.ts",
    "dev": "nodemon",
    "start": "npx tsc && node dist/app.js"
  },
  "author": "smnkumarpaul",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@types/cookie-session": "^2.0.49",
    "@types/express": "^4.17.21",
    "body-parser": "^1.20.2",
    "cookie-session": "^2.1.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.0.1",
    "typescript": "^5.4.5",
    "prisma": "^6.7.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prisma-merge": "^0.2.0",
    "ts-node": "^10.9.2"
  }
}
